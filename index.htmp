    <script>
        const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        function playBloop() {
            if (audioCtx.state === 'suspended') audioCtx.resume();
            const osc = audioCtx.createOscillator(); const gain = audioCtx.createGain();
            osc.connect(gain); gain.connect(audioCtx.destination);
            osc.type = 'sine'; osc.frequency.setValueAtTime(600, audioCtx.currentTime); osc.frequency.exponentialRampToValueAtTime(150, audioCtx.currentTime + 0.15);
            gain.gain.setValueAtTime(0.5, audioCtx.currentTime); gain.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + 0.15);
            osc.start(); osc.stop(audioCtx.currentTime + 0.2);
        }

        // Like Logic
        const likeBtn = document.getElementById('like-btn');
        const likeText = document.getElementById('like-text');
        const popup = document.getElementById('thumbsUpPopup');

        if (localStorage.getItem('liked_visual_final') === 'true') {
            likeBtn.classList.add('liked'); likeText.innerText = "Liked";
        }

        function triggerLike() {
            playBloop();
            likeBtn.classList.add('liked'); likeText.innerText = "Liked";
            likeBtn.classList.remove('jelly'); void likeBtn.offsetWidth; likeBtn.classList.add('jelly');
            popup.style.animation = 'none'; void popup.offsetWidth; popup.style.animation = 'fbLikePop 0.8s ease-out forwards';
            localStorage.setItem('liked_visual_final', 'true');
        }

        // Auto Scroll
        function startFastScroll() {
            const duration = 1500; const stayDuration = 700;
            const startY = 0; const endY = document.body.scrollHeight - window.innerHeight;
            let startTime = null; let direction = 1; let isUserInteracting = false;
            const stopScroll = () => { isUserInteracting = true; };
            window.addEventListener('pointerdown', stopScroll); window.addEventListener('wheel', stopScroll); window.addEventListener('touchstart', stopScroll);
            setTimeout(() => requestAnimationFrame(scrollStep), 1000);
            function scrollStep(timestamp) {
                if (isUserInteracting) return;
                if (!startTime) startTime = timestamp;
                const elapsed = timestamp - startTime;
                if (direction === 1) {
                    if (elapsed < duration) { window.scrollTo(0, startY + (endY * (-(Math.cos(Math.PI * (elapsed / duration)) - 1) / 2))); requestAnimationFrame(scrollStep); }
                    else if (elapsed < duration + stayDuration) { window.scrollTo(0, endY); requestAnimationFrame(scrollStep); }
                    else { startTime = null; direction = -1; requestAnimationFrame(scrollStep); }
                } else {
                    if (elapsed < duration) { window.scrollTo(0, endY - (endY * (-(Math.cos(Math.PI * (elapsed / duration)) - 1) / 2))); requestAnimationFrame(scrollStep); }
                    else { window.scrollTo(0, 0); }
                }
            }
        }
        window.addEventListener('load', startFastScroll);

        // Music Logic
        const DISCORD_ID = '1363474188161122472';
        function connectLanyard() {
            const ws = new WebSocket("wss://api.lanyard.rest/socket");
            ws.onopen = () => ws.send(JSON.stringify({ op: 2, d: { subscribe_to_id: DISCORD_ID } }));
            ws.onmessage = (e) => {
                const d = JSON.parse(e.data);
                if(d.t === "INIT_STATE" || d.t === "PRESENCE_UPDATE") updateMusic(d.d);
            };
            ws.onclose = () => setTimeout(connectLanyard, 5000);
        }
        function updateMusic(d) {
            const widget = document.getElementById('music-widget');
            const img = document.getElementById('music-art');
            const statusIcon = document.querySelector('.music-status i');
            const statusText = document.getElementById('status-text');
            const title = document.getElementById('music-song');
            const artist = document.getElementById('music-artist');
            if (d.listening_to_spotify) {
                const s = d.spotify; img.src = s.album_art_url; title.innerText = s.song; artist.innerText = s.artist;
                statusText.innerText = "LISTENING NOW"; statusIcon.className = "fab fa-spotify";
                widget.classList.remove('inactive'); widget.classList.add('playing');
            } else {
                widget.classList.remove('playing'); widget.classList.add('inactive');
            }
        }
        connectLanyard();

        function copyLink() { playSound(); navigator.clipboard.writeText(window.location.href); showToast("Link Copied!"); }
        function showToast(msg) { const t = document.getElementById('dynamic-toast'); t.innerText=msg; t.classList.add('show'); setTimeout(()=>t.classList.remove('show'),2000); }
        function verifyClick() { playSound(); }
        function playSound() {}

        function morphShareButton() {
            playBloop(); const btn = document.getElementById('shareBtn'); const card = document.getElementById('activeQrCard'); const modal = document.getElementById('qrModal');
            document.getElementById('qrImage').src = `https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=${encodeURIComponent(window.location.href)}`;
            document.getElementById('share-url').innerText = window.location.href;
            btn.classList.remove('morph-in-rev'); btn.classList.add('morph-out-fwd');
            setTimeout(() => { modal.classList.add('active'); card.style.display='block'; card.classList.remove('morph-out-rev'); card.classList.add('morph-in-fwd'); }, 300);
        }
        function closeQR() {
            playBloop(); const modal = document.getElementById('qrModal'); const card = document.getElementById('activeQrCard'); const btn = document.getElementById('shareBtn');
            card.classList.remove('morph-in-fwd'); card.classList.add('morph-out-rev');
            setTimeout(() => { modal.classList.remove('active'); btn.classList.remove('morph-out-fwd'); btn.classList.add('morph-in-rev'); }, 300);
        }

        let currentAudio = null;
        function togglePlay(id) {
            playBloop();
            const audio = document.getElementById(`audio${id}`);
            const btnIcon = document.querySelector(`#track${id} .play-btn i`);
            const container = document.getElementById(`track${id}`);
            if (currentAudio === audio && !audio.paused) {
                audio.pause(); btnIcon.classList.remove('fa-pause'); btnIcon.classList.add('fa-play'); container.classList.remove('playing'); currentAudio = null; return;
            }
            if (currentAudio) {
                currentAudio.pause(); currentAudio.currentTime = 0;
                document.querySelectorAll('.music-item').forEach(el => el.classList.remove('playing'));
                document.querySelectorAll('.play-btn i').forEach(el => { el.classList.remove('fa-pause'); el.classList.add('fa-play'); });
            }
            audio.play(); btnIcon.classList.remove('fa-play'); btnIcon.classList.add('fa-pause'); container.classList.add('playing'); currentAudio = audio;
        }

        setInterval(() => { document.getElementById('time').innerText = new Date().toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'}); }, 1000);
        const now = new Date(); const bday = new Date(now.getFullYear(), 7, 9);
        if(now > bday) bday.setFullYear(now.getFullYear()+1);
        document.getElementById('bday-count').innerText = Math.ceil((bday-now)/(1000*60*60*24));
        setInterval(() => document.getElementById('bday-card').classList.toggle('flipped'), 4000);

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => { if(entry.isIntersecting) entry.target.classList.add('visible'); else entry.target.classList.remove('visible'); });
        }, { threshold: 0.1 });
        document.querySelectorAll('.glass-card').forEach(el => observer.observe(el));

        const timelineObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => { if(entry.isIntersecting) entry.target.classList.add('lines-visible'); else entry.target.classList.remove('lines-visible'); });
        }, { threshold: 0.3 });
        document.querySelectorAll('.timeline').forEach(el => timelineObserver.observe(el));

        fetch('https://api.counterapi.dev/v1/gourab-bio/views/up').then(r=>r.json()).then(d => document.getElementById('views').innerText = (10000+d.count).toLocaleString() + " Views");
        fetch('https://api.open-meteo.com/v1/forecast?latitude=23.4&longitude=88.5&current_weather=true').then(r=>r.json()).then(d=>{ document.getElementById('weather').innerText = Math.round(d.current_weather.temperature) + "°C ☁️"; });
    </script>
